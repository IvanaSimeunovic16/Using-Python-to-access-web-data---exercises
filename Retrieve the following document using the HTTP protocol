import socket

mysock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)    # Creating socket
mysock.connect(('data.pr4e.org', 80)) # Connecting
cmd = 'GET http://data.pr4e.org/intro-short.txt HTTP/1.0\r\n\r\n'.encode()   # In HTTP protocole, client sends first; server is receiving first
mysock.send(cmd)

while True:
    data = mysock.recv(512)   
    if len(data) < 1:            # If there is no any data, stop the transmission
        break
    print(data.decode(),end='')  # If data exists, decode it

mysock.close()     # Closing socket
